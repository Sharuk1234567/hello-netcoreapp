<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2015/06/nuspec.xsd">
  <metadata>
    <!-- Required metadata elements (according to https://docs.microsoft.com/en-us/nuget/schema/nuspec) -->

    <!-- id is lowercase and if you want a good separator for words, use '-', not '.'. Dots are only acceptable as suffixes for certain types of packages, e.g. .install, .portable, .extension, .template -->
    <!-- If the software is cross-platform, attempt to use the same id as the debian/rpm package(s) if possible. -->
    <id>hello-netcoreapp.portable</id>
    <!-- version should MATCH as closely as possible with the underlying software -->
    <!-- Is the version a prerelease of a version? https://docs.nuget.org/create/versioning#creating-prerelease-packages -->
    <!-- Note that unstable versions like 0.0.1 can be considered a released version, but it's possible that one can release a 0.0.1-beta before you release a 0.0.1 version. If the version number is final, that is considered a released version and not a prerelease. -->
    <version>1.0.0</version>
    <!-- Markdown okay -->
    <description>hello-netcoreapp is a simple .NET Core console application that prints "Hello World!"</description>
    <authors>Philipp Gillé</authors>

    <!-- Optional metadata elements (according to https://docs.microsoft.com/en-us/nuget/schema/nuspec) -->

    <title>hello-netcoreapp (Portable)</title>
    <!-- owners is a poor name for maintainers of the package. It sticks around by this name for compatibility reasons. It basically means you. -->
    <owners>Philipp Gillé</owners>
    <!-- projectUrl is required for the community feed -->
    <projectUrl>https://github.com/philippgille/hello-netcoreapp</projectUrl>
    <!-- If there is a license Url available, it is is required for the community feed -->
    <licenseUrl>https://raw.githubusercontent.com/philippgille/hello-netcoreapp/master/LICENSE</licenseUrl>
    <!--<iconUrl>http://cdn.rawgit.com/__REPLACE_YOUR_REPO__/master/icons/hwapp.png</iconUrl>-->
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <summary>hello-netcoreapp is a simple .NET Core console application that prints "Hello World!"</summary>
    <!-- Markdown okay -->
    <releaseNotes>1.0.0: Initial release</releaseNotes>
    <!-- Year Software Vendor -->
    <copyright>Copyright (c) 2017 Philipp Gillé</copyright>
    <tags>hello-netcoreapp netcoreapp hello-world</tags>

    <!-- Metadata elements only usable by chocolatey tools -->

    <!-- Software Source Location - is the software FOSS somewhere? Link to it with this -->
    <projectSourceUrl>https://github.com/philippgille/hello-netcoreapp</projectSourceUrl>
    <!-- At what url are the software docs located? -->
    <docsUrl>https://raw.githubusercontent.com/philippgille/hello-netcoreapp/master/chocolatey/README.md</docsUrl>
    <!--<mailingListUrl></mailingListUrl>-->
    <bugTrackerUrl>https://github.com/philippgille/hello-netcoreapp/issues</bugTrackerUrl>
    <!-- Where is this Chocolatey package located (think GitHub)? packageSourceUrl is highly recommended for the community feed -->
    <packageSourceUrl>https://github.com/philippgille/hello-netcoreapp</packageSourceUrl>
  </metadata>
  <!-- this section controls what actually gets packaged into the Chocolatey package -->
  <files>
    <!-- Building from Linux? You may need this instead: <file src="tools/**" target="tools" />-->
    <file src="tools\**" target="tools" />
  </files>
</package>
